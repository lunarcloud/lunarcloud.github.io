{
    "name": "@lunarcloud/portfolio",
    "repository": {
        "url": "https://github.com/lunarcloud/lunarcloud.github.io"
    },
    "private": true,
    "scripts": {
        "eslint-fix": "npx eslint --ignore-path .gitignore --ext .js . --fix",
        "eslint": "npx eslint --ignore-path .gitignore --ext .js .",
        "htmllint": "npx linthtml \"**/*.html\"",
        "csslint": "npx stylelint \"**/*.css\" --quiet-deprecation-warnings",
        "csslint-fix": "npx stylelint \"**/*.css\" --quiet-deprecation-warnings --fix",
        "lint": "npm run eslint && npm run htmllint && npm run csslint",
        "lint-fix": "npm run eslint-fix && npm run htmllint && npm run csslint-fix",
        "serve": "serve",
        "copy-deps": "shx rm -rf lib && shx mkdir lib && shx cp -r node_modules/gameinputjs lib/"
    },
    "devDependencies": {
        "@linthtml/linthtml": "^0.10.1",
        "eslint": "^8.57.1",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-editorconfig": "^4.0.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^46.10.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.6.0",
        "serve": "^14.2.4",
        "shx": "^0.3.4",
        "stylelint": "^16.10.0",
        "stylelint-config-standard": "^35.0.0"
    },
    "dependencies": {
        "gameinputjs": "^13.2.7"
    }
}
